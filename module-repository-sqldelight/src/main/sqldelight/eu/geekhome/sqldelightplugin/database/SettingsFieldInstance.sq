

CREATE TABLE IF NOT EXISTS settingsFieldInstance (
  pluginId TEXT NOT NULL,
  clazz TEXT NOT NULL,
  name TEXT NOT NULL,
  value TEXT,
  PRIMARY KEY(pluginId, name, clazz)
);

selectAll:
SELECT *
FROM settingsFieldInstance;

selectByClazz:
SELECT *
FROM settingsFieldInstance
WHERE clazz = ?;

selectByPluginId:
SELECT *
FROM settingsFieldInstance
WHERE pluginId = ?;

insertOrReplace:
INSERT OR REPLACE INTO settingsFieldInstance(pluginId, clazz, name, value)
VALUES (?, ?, ?, ?);